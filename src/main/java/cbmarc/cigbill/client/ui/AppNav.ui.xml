<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field="cnt" type="cbmarc.cigbill.client.i18n.AppConstants" />

	<g:HTMLPanel styleName="navbar">
		<div class="navbar-inner">
			<ul class="nav">
				<li class="dropdown">
					<g:Anchor href="javascript:;" ui:field="money"
						styleName="dropdown-toggle disabled">
						<ui:text from="{cnt.navMoney}"></ui:text>
						<b class="caret"></b>
					</g:Anchor>
					<ul class="dropdown-menu">
						<b:NavLink icon="MONEY" ui:field="invoices" text="{cnt.navInvoices}"></b:NavLink>
						<b:NavLink icon="BRIEFCASE" ui:field="payments" text="{cnt.navPayments}"></b:NavLink>
					</ul>
				</li>

				<li class="dropdown">
					<g:Anchor href="javascript:;" ui:field="stock"
						styleName="dropdown-toggle disabled">
						<ui:text from="{cnt.navStock}"></ui:text>
						<b class="caret"></b>
					</g:Anchor>
					<ul class="dropdown-menu">
						<b:NavLink icon="BOOK" ui:field="products" text="{cnt.navProducts}"></b:NavLink>
						<b:NavLink icon="BARCODE" ui:field="taxes" text="{cnt.navTaxes}"></b:NavLink>
					</ul>
				</li>

				<li class="dropdown">
					<g:Anchor href="javascript:;" ui:field="people"
						styleName="dropdown-toggle disabled">
						<ui:text from="{cnt.navPeople}"></ui:text>
						<b class="caret"></b>
					</g:Anchor>
					<ul class="dropdown-menu">
						<b:NavLink icon="ROAD" ui:field="customers" text="{cnt.navCustomers}"></b:NavLink>
						<b:NavLink icon="USER" ui:field="users" text="{cnt.navUsers}"></b:NavLink>
					</ul>
				</li>

				<li class="dropdown">
					<g:Anchor href="javascript:;" ui:field="settings"
						styleName="dropdown-toggle disabled">
						<ui:text from="{cnt.navSettings}"></ui:text>
						<b class="caret"></b>
					</g:Anchor>
					<ul class="dropdown-menu">
						<b:NavLink icon="REORDER" ui:field="messages" text="{cnt.navMessages}"></b:NavLink>
					</ul>
				</li>
			</ul>
			<b:Nav alignment="RIGHT">
				<b:NavLink ui:field="logout" text="{cnt.navLogout}"></b:NavLink>
			</b:Nav>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 