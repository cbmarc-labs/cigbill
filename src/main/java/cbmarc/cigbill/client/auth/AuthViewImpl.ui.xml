<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field="appCnts" type="cbmarc.cigbill.client.i18n.AppConstants" />
	<ui:with field="authCnts" type="cbmarc.cigbill.client.auth.AuthConstants" />

	<ui:style>
		.form {
			margin: 5em auto;
			width: 310px;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.form}">
		<b:WellForm ui:field="formPanel">

			<b:Fieldset>
				<b:Legend>
					<ui:text from="{authCnts.legendLabel}"></ui:text>
				</b:Legend>

				<b:ControlGroup ui:field="loginCG">
					<b:ControlLabel for="login">
						<ui:text from="{authCnts.formLogin}"></ui:text>
					</b:ControlLabel>
					<b:Controls>
						<b:TextBox ui:field="login" width="18em" b:id="login" value="admin"></b:TextBox>
					</b:Controls>
				</b:ControlGroup>

				<b:ControlGroup ui:field="passwordCG">
					<b:ControlLabel for="password">
						<ui:text from="{authCnts.formPassword}"></ui:text>
					</b:ControlLabel>
					<b:Controls>
						<b:PasswordTextBox ui:field="password" width="18em" 
							b:id="password" value="admin"></b:PasswordTextBox>
					</b:Controls>
				</b:ControlGroup>

				<!-- <div class="error"></div> -->

				<g:HTMLPanel>
					<span class="pull-right">
						<g:SubmitButton ui:field="submitButton" styleName="btn btn-primary">
							<i class="icon-ok icon-white"></i>
							<ui:text from="{appCnts.formSubmit}"></ui:text>
						</g:SubmitButton>
					</span>
					<b:CheckBox ui:field="rememberMe" checked="true"
						text="{authCnts.formRememberMe}"></b:CheckBox>
				</g:HTMLPanel>
			</b:Fieldset>

		</b:WellForm>
	</g:HTMLPanel>
	
</ui:UiBinder> 