<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:a="urn:import:cbmarc.cigbill.client.ui">

	<ui:with field="appCnts" type="cbmarc.cigbill.client.i18n.AppConstants" />
	<ui:with field="localCnts"
		type="cbmarc.cigbill.client.main.invoices.InvoicesConstants" />

	<g:HTMLPanel styleName="container">

		<g:HTMLPanel ui:field="cellTablePanel" styleName="container">
			<div class="btn-toolbar">
				<g:Button ui:field="addTableButton" styleName="btn">
					<i class="icon-plus"></i>
					<ui:text from="{appCnts.addNewItemButton}"></ui:text>
				</g:Button>
				<g:Button ui:field="deleteTableButton" styleName="btn btn-danger">
					<i class="icon-remove icon-white"></i>
					<ui:text from="{appCnts.deleteSelectedItemsButton}"></ui:text>
				</g:Button>
				<div class="span pull-right">
					<g:Button ui:field="toolbarRefreshButton" styleName="btn">
						<i class="icon-refresh"></i>
						<ui:text from="{appCnts.toolbarRefreshButton}"></ui:text>
					</g:Button>
				</div>
			</div>
			<div class="row-fluid" style="margin:5px 0;">
				<div class="span">
					<a:AppCellTable ui:field="cellTable"></a:AppCellTable>
				</div>
			</div>
		</g:HTMLPanel>

		<g:FormPanel ui:field="formPanel" styleName="well">

			<g:HTMLPanel>
				<fieldset>
					<legend>
						<g:Anchor href="javascript:;" ui:field="validationAnchor">
							<span class="label label-warning pull-right">
								<i class="icon-warning-sign icon-white">
									<!-- IE Bug -->
									<img
										style="height:14px;width:14px;"
										src="data:image/gif;base64,R0lGODlhAQABAJH/AP///wAAAMDAwAAAACH5BAEAAAIALAAAAAABAAEAQAICVAEAOw==" />
								</i>
							</span>
						</g:Anchor>
						<g:Label ui:field="legend"></g:Label>
					</legend>

					<g:FocusPanel ui:field="validationPanel"
						styleName="validation-panel alert alert-error"></g:FocusPanel>

					<div class="control-group" ui:field="notesCG">
						<label class="control-label">
							<ui:text from="{localCnts.formNotes}"></ui:text>
						</label>
						<div class="controls">
							<g:TextArea ui:field="notes" visibleLines="4"
								styleName="span10" />
						</div>
					</div>

					<p class="muted">
						<ui:text from="{appCnts.formRequiredFieldsText}"></ui:text>
					</p>

					<div class="form-actions">
						<g:SubmitButton ui:field="submitButton" styleName="btn">
							<i class="icon-ok"></i>
							<ui:text from="{appCnts.formSubmit}"></ui:text>
						</g:SubmitButton>
						<g:Button ui:field="backButton" styleName="btn">
							<i class="icon-chevron-left"></i>
							<ui:text from="{appCnts.formBack}"></ui:text>
						</g:Button>
						<div class="span pull-right">
							<g:Button ui:field="formDeleteButton" styleName="btn btn-danger">
								<i class="icon-remove icon-white"></i>
							<ui:text from="{appCnts.formDelete}"></ui:text>
							</g:Button>
						</div>
					</div>

				</fieldset>
			</g:HTMLPanel>

		</g:FormPanel>

	</g:HTMLPanel>

</ui:UiBinder> 