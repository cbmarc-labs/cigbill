<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="cnt" type="cbmarc.cigbill.client.i18n.AppConstants" />

	<ui:style>
		.nav {
			padding: 8px 0;
		}
	</ui:style>

	<g:HTMLPanel styleName="well {style.nav}">

		<ul class="nav nav-list">
			<li class="nav-header">
				<ui:text from="{cnt.navMoney}"></ui:text>
			</li>
			<li ui:field="invoicesGroup">
				<g:Anchor href="javascript:;" ui:field="invoices">
					<i class="icon-book"></i>
					<ui:text from="{cnt.navInvoices}"></ui:text>
				</g:Anchor>
			</li>
			<li ui:field="paymentsGroup">
				<g:Anchor href="javascript:;" ui:field="payments">
					<i class="icon-briefcase"></i>
					<ui:text from="{cnt.navPayments}"></ui:text>
				</g:Anchor>
			</li>
		</ul>

		<ul class="nav nav-list">
			<li class="nav-header">
				<ui:text from="{cnt.navStock}"></ui:text>
			</li>
			<li ui:field="productsGroup">
				<g:Anchor href="javascript:;" ui:field="products">
					<i class="icon-shopping-cart"></i>
					<ui:text from="{cnt.navProducts}"></ui:text>
				</g:Anchor>
			</li>
			<li ui:field="itemsGroup">
				<g:Anchor href="javascript:;" ui:field="items">
					<i class="icon-shopping-cart"></i>
					<ui:text from="{cnt.navItems}"></ui:text>
				</g:Anchor>
			</li>
			<li ui:field="taxesGroup">
				<g:Anchor href="javascript:;" ui:field="taxes">
					<i class="icon-barcode"></i>
					<ui:text from="{cnt.navTaxes}"></ui:text>
				</g:Anchor>
			</li>
		</ul>

		<ul class="nav nav-list">
			<li class="nav-header">
				<ui:text from="{cnt.navPeople}"></ui:text>
			</li>
			<li ui:field="customersGroup">
				<g:Anchor href="javascript:;" ui:field="customers">
					<i class="icon-road"></i>
					<ui:text from="{cnt.navCustomers}"></ui:text>
				</g:Anchor>
			</li>
			<li ui:field="usersGroup">
				<g:Anchor href="javascript:;" ui:field="users">
					<i class="icon-user"></i>
					<ui:text from="{cnt.navUsers}"></ui:text>
				</g:Anchor>
			</li>
		</ul>

		<ul class="nav nav-list">
			<li class="nav-header">
				<ui:text from="{cnt.navSettings}"></ui:text>
			</li>
			<li>
				<g:Anchor href="javascript:;" ui:field="logout">
					<i class="icon-off"></i>
					<ui:text from="{cnt.navLogout}" />
				</g:Anchor>
			</li>
		</ul>

	</g:HTMLPanel>

</ui:UiBinder> 