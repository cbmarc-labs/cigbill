<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:a="urn:import:cbmarc.cigbill.client.ui">
	<ui:style>
	</ui:style>

	<ui:with field="cnt" type="cbmarc.cigbill.client.i18n.AppConstants" />

	<g:HTMLPanel styleName="container">
		<div class="page-header">
			<h1>CIMAIN</h1>
		</div>

		<div class="navbar">
			<div class="navbar-inner">

				<ul class="nav">
					<li class="dropdown">
						<a href="javascript:;" class="dropdown-toggle disabled"
							data-toggle="dropdown">
							<ui:text from="{cnt.navMoney}"></ui:text>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="#main:invoices">
									<i class="icon-book"></i>
									<ui:text from="{cnt.navInvoices}"></ui:text>
								</a>
							</li>
							<li>
								<a>
									<i class="icon-briefcase"></i>
									<ui:text from="{cnt.navPayments}"></ui:text>
								</a>
							</li>
						</ul>
					</li>

					<li class="dropdown">
						<a href="javascript:;" class="dropdown-toggle disabled"
							data-toggle="dropdown">
							<ui:text from="{cnt.navStock}"></ui:text>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="#main:products">
									<i class="icon-shopping-cart"></i>
									<ui:text from="{cnt.navProducts}"></ui:text>
								</a>
							</li>
							<li>
								<a>
									<i class="icon-barcode"></i>
									<ui:text from="{cnt.navTaxes}"></ui:text>
								</a>
							</li>
						</ul>
					</li>

					<li class="dropdown">
						<a href="javascript:;" class="dropdown-toggle disabled"
							data-toggle="dropdown">
							<ui:text from="{cnt.navPeople}"></ui:text>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a href="#main:customers">
									<i class="icon-road"></i>
									<ui:text from="{cnt.navCustomers}"></ui:text>
								</a>
							</li>
							<li>
								<a href="#main:users">
									<i class="icon-user"></i>
									<ui:text from="{cnt.navUsers}"></ui:text>
								</a>
							</li>
						</ul>
					</li>

					<li class="dropdown">
						<a href="javascript:;" class="dropdown-toggle disabled"
							data-toggle="dropdown">
							<ui:text from="{cnt.navSettings}"></ui:text>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a>
									<i class="icon-align-justify"></i>
									<ui:text from="{cnt.navMessages}"></ui:text>
								</a>
							</li>
						</ul>
					</li>
				</ul>

				<ul class="nav pull-right">
					<li>
						<a href="#auth:logout">
							<ui:text from="{cnt.navLogout}"></ui:text>
						</a>
					</li>
				</ul>

			</div>
		</div>

		<a:UlPanel styleName="breadcrumb" ui:field="breadcrumb"></a:UlPanel>

		<g:SimplePanel ui:field="contentPanel" />
	</g:HTMLPanel>
</ui:UiBinder> 