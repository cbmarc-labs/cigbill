<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:a="urn:import:cbmarc.cigbill.client.ui">

	<ui:with field="appCnts" type="cbmarc.cigbill.client.i18n.AppConstants" />

	<g:HTMLPanel styleName="container">
		<div class="hero-unit">
			<div class="row">
				<div class="span5">
					<p>
						<ui:text from="{appCnts.navMoney}"></ui:text>
					</p>
					<p>
						<a href="#invoices:" class="btn btn-large">
							<ui:text from="{appCnts.navInvoices}"></ui:text>
						</a>
						<a href="#payments:" class="btn btn-large">
							<ui:text from="{appCnts.navPayments}"></ui:text>
						</a>
					</p>
				</div>
				<div class="span5">
					<p>
						<ui:text from="{appCnts.navStock}"></ui:text>
					</p>
					<p>
						<a href="#products:" class="btn btn-large">
							<ui:text from="{appCnts.navProducts}"></ui:text>
						</a>
						<a href="#taxes:" class="btn btn-large">
							<ui:text from="{appCnts.navTaxes}"></ui:text>
						</a>
					</p>
				</div>
			</div>

			<div class="row">
				<div class="span5">
					<p>
						<ui:text from="{appCnts.navPeople}"></ui:text>
					</p>
					<p>
						<a href="#customers:" class="btn btn-large">
							<ui:text from="{appCnts.navCustomers}"></ui:text>
						</a>
						<a href="#users:" class="btn btn-large">
							<ui:text from="{appCnts.navUsers}"></ui:text>
						</a>
					</p>
				</div>
				<div class="span5">
					<p>
						<ui:text from="{appCnts.navSettings}"></ui:text>
					</p>
					<p>
						<a href="#messages:" class="btn btn-large">
							<ui:text from="{appCnts.navMessages}"></ui:text>
						</a>
					</p>
				</div>
			</div>
		</div>

		<div class="hero-unit">
			In development
			<g:SimplePanel ui:field="pieChartContainer" />
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 