<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:a="urn:import:cbmarc.cigbill.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field="appCnts" type="cbmarc.cigbill.client.i18n.AppConstants" />
	<ui:with field="usersCnts"
		type="cbmarc.cigbill.client.main.users.UsersConstants" />

	<g:HTMLPanel>

		<g:HTMLPanel ui:field="cellTablePanel">

			<b:Paragraph>
				<span>
					<b:Button ui:field="addTableButton" icon="PLUS"
						text="{appCnts.addNewItemButton}"></b:Button>

					<b:Button ui:field="deleteTableButton" icon="REMOVE"
						text="{appCnts.deleteSelectedItemsButton}" type="DANGER"></b:Button>
				</span>
				<span class="pull-right">
					<b:Button ui:field="toolbarRefreshButton" icon="REFRESH"
						text="{appCnts.toolbarRefreshButton}"></b:Button>
				</span>
			</b:Paragraph>

			<b:Paragraph>
				<a:AppCellTable ui:field="cellTable"></a:AppCellTable>
			</b:Paragraph>

		</g:HTMLPanel>

		<b:WellForm ui:field="formPanel">

			<b:Fieldset>
				<b:Legend>
					<span class="pull-right">
						<b:Button icon="WARNING_SIGN" ui:field="validationButton"
							type="WARNING"></b:Button>
					</span>
					<g:Label ui:field="legend"></g:Label>
				</b:Legend>

				<b:AlertBlock ui:field="validationPanel" heading="Warning"
					type="ERROR" close="false"></b:AlertBlock>

				<b:Row>
					<b:Column size="3">
						<b:ControlGroup ui:field="loginCG">
							<b:ControlLabel for="login">
								<ui:text from="{usersCnts.formLogin}" />
								*
							</b:ControlLabel>
							<b:Controls>
								<b:TextBox ui:field="login" b:id="login" />
							</b:Controls>
						</b:ControlGroup>
					</b:Column>
					<b:Column size="3">
						<b:ControlGroup ui:field="passwordCG">
							<b:ControlLabel for="password">
								<ui:text from="{usersCnts.formPassword}" />
								*
							</b:ControlLabel>
							<b:Controls>
								<b:PasswordTextBox ui:field="password" b:id="password" />
							</b:Controls>
						</b:ControlGroup>
					</b:Column>
				</b:Row>

				<b:Row>
					<b:Column size="3">
						<b:ControlGroup ui:field="sexCG">
							<b:ControlLabel for="sex">
								<ui:text from="{usersCnts.formSex}" />
								*
							</b:ControlLabel>
							<b:Controls>
								<a:ListBoxEditor ui:field="sex">
									<g:item value=""></g:item>
									<g:item value="1">
										<ui:text from="{usersCnts.formSex1}"></ui:text>
									</g:item>
									<g:item value="2">
										<ui:text from="{usersCnts.formSex2}"></ui:text>
									</g:item>
									<g:item value="3">
										<ui:text from="{usersCnts.formSex3}"></ui:text>
									</g:item>
								</a:ListBoxEditor>
							</b:Controls>
						</b:ControlGroup>
					</b:Column>

					<b:Column size="3">
						<b:ControlGroup ui:field="favoriteColorCG">
							<b:ControlLabel for="favoriteColor">
								<ui:text from="{usersCnts.formFavoriteColor}" />
							</b:ControlLabel>
							<b:Controls>
								<a:ListBoxMultiEditor ui:field="favoriteColor"
									visibleItemCount="3">
									<g:item value="0">
										<ui:text from="{usersCnts.formFavoriteColor0}"></ui:text>
									</g:item>
									<g:item value="1">
										<ui:text from="{usersCnts.formFavoriteColor1}"></ui:text>
									</g:item>
									<g:item value="2">
										<ui:text from="{usersCnts.formFavoriteColor2}"></ui:text>
									</g:item>
									<g:item value="3">
										<ui:text from="{usersCnts.formFavoriteColor3}"></ui:text>
									</g:item>
								</a:ListBoxMultiEditor>
							</b:Controls>
						</b:ControlGroup>
					</b:Column>
				</b:Row>

				<b:ControlGroup ui:field="descriptionCG">
					<b:ControlLabel for="description">
						<ui:text from="{usersCnts.formDescription}" />
					</b:ControlLabel>
					<b:Controls>
						<g:TextArea ui:field="description" visibleLines="4"
							styleName="span8" />
					</b:Controls>
				</b:ControlGroup>

				<b:CheckBox ui:field="active" text="{usersCnts.formActive}" />

				<b:Paragraph styleName="muted"
					text="{appCnts.formRequiredFieldsText}" />

				<b:FormActions>
					<g:HTMLPanel>
						<span>
							<g:SubmitButton ui:field="submitButton" styleName="btn">
								<i class="icon-ok"></i>
								<ui:text from="{appCnts.formSubmit}"></ui:text>
							</g:SubmitButton>

							<b:Button ui:field="backButton" icon="CHEVRON_LEFT"
								text="{appCnts.formBack}" />
						</span>
						<span class="pull-right">
							<b:Button ui:field="formDeleteButton" icon="REMOVE"
								text="{appCnts.formDelete}" type="DANGER" />
						</span>
					</g:HTMLPanel>
				</b:FormActions>

			</b:Fieldset>
		</b:WellForm>

	</g:HTMLPanel>

</ui:UiBinder> 